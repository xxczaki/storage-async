{
    "name": "storage-async",
    "version": "0.0.6",
    "description": "Lightweight, asynchronous, self-repairing, atomic, key-value JSON storage for Node.js applications. Supports TTL.",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "author": "Antoni Kepinski <a@kepinski.me> (https://kepinski.me)",
    "bugs": {
        "url": "https://github.com/xxczaki/storage-async/issues"
    },
    "scripts": {
        "prebuild": "del-cli dist",
        "esm": "tsc --module esnext && cpy dist/index.js dist --rename index.esm.js",
        "cjs": "tsc --module commonjs",
        "build": "npm run esm && npm run cjs",
        "size": "size-limit",
        "test": "xo && c8 ava && c8 report --reporter=lcov",
        "benchmark": "ts-node -T benchmark.ts",
        "prepublishOnly": "npm run build"
    },
    "engines": {
        "node": ">=12"
    },
    "license": "MIT",
    "repository": "xxczaki/storage-async",
    "homepage": "https://github.com/xxczaki/storage-async",
    "keywords": [
        "storage-async",
        "async-storage",
        "key-val",
        "keyv",
        "file-storage",
        "store",
        "async-store",
        "file-store",
        "ttl",
        "ttl-store",
        "ttl-storage",
        "atomic-storage",
        "json-store",
        "database",
        "cache-storage",
        "cache"
    ],
    "devDependencies": {
        "@akepinski/tsconfig": "0.0.2",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "ava": "^3.15.0",
        "c8": "^7.4.0",
        "coveralls": "^3.1.0",
        "cpy-cli": "^3.1.1",
        "del-cli": "^3.0.1",
        "eslint-config-xo-typescript": "^0.37.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3",
        "xo": "^0.37.1"
    },
    "sideEffects": false,
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "xo": {
        "extends": "xo-typescript",
        "extensions": [
            "ts"
        ],
        "rules": {
            "import/no-anonymous-default-export": 0
        }
    },
    "dependencies": {
        "jsonrepair": "^2.0.0",
        "load-json-file": "^6.2.0",
        "write-json-file": "^4.3.0"
    }
}
